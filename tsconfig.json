{
  "compilerOptions": {
    "outDir": "bin",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "experimentalDecorators": true,
    "baseUrl": "../",
    "paths": {
      "*": [
        "types/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
